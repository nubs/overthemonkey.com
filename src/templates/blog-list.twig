{% extends "base.twig" %}
{% block title %}Blog{% endblock %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="list-group">
        {% for post in posts %}
          {% include "blog/#{post}.twig" with {"synopsis": true} %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
